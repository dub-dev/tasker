{% extends '::base.html.twig' %}

{% block content -%}
    <a class="btn btn-warning" href="{{ path('board_new') }}"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Create board</a>
    <hr/>
        {% for board in boards %}
            <div class="t-pointer col-sm-6 col-md-4" onclick="location.href='{{ path('board_show', { 'id': board.id }) }}'">
                <div class="thumbnail">
                    <div class="t-board-title">{{ board.name }}</div>
                    <div class="caption">
                        <span class="">50% Complete</span>
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: 50%;">
                            </div>
                        </div>
                        <p class="well board-description">{{ board.description }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endblock %}
