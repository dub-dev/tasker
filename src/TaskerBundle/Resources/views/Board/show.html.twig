{% extends '::base.html.twig' %}

{% block content -%}
    <h1>Board</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ board.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ board.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ board.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ board.date|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ board.status }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ board.active }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('board') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('board_edit', { 'id': board.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
